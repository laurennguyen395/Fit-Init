<div class="update">
    <form action="/update?_method=PUT" method="POST">
        <input class="form-control" name="name" type="text" placeholder="Name" value="<%=user.name%>">
        <input class="form-control" name="email" type="text" placeholder="Email"value="<%=user.email%>">
        <input class="form-control" name="gender" type="string" placeholder="Gender"value="<%=user.gender%>">
        <input class="form-control" name="height" type="text" placeholder="Height"value="<%=user.height%>">
        <input class="form-control" name="weight" type="text" placeholder="Weight"value="<%=user.weight%>">
        <input class="form-control" name="age" type="integer" placeholder="Age"value="<%=user.age%>">
        
        <button type="submit" class="btn btn-primary done">Done</button>
    </form>
</div>