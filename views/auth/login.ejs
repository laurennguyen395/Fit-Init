<form class="login" action="/auth/login" method="POST">
  <div class="form-group">
    <label for="auth-email">Email</label>
    <input type="email" class="form-control" id="auth-email" name="email"  aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="auth-password">Password</label>
    <input type="password" class="form-control" id="auth-password" name="password">
  </div>
  <div class="form-group form-check">
  </div>
  <button type="submit" class="btn btn-primary">Log In</button>
</form>
